{
  "buildCommand": "npx vite build && npx esbuild api/[...path].ts --bundle --platform=node --format=esm --outfile=api/handler.mjs --external:@vercel/node",
  "outputDirectory": "dist/public",
  "framework": null,
  "functions": {
    "api/handler.mjs": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/health.ts": {
      "maxDuration": 10,
      "memory": 256
    }
  },
  "rewrites": [
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/api/:path*", "destination": "/api/handler" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
