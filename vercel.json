{
  "buildCommand": "npx vite build",
  "outputDirectory": "dist/public",
  "framework": null,
  "functions": {
    "api/[...path].ts": {
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "server/**/*,shared/**/*"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/[...path]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
